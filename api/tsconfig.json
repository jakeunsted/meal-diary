{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": true,
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "outDir": "./dist",
    "rootDir": "./",
    "emitDeclarationOnly": true,
    "declaration": true
  }
}